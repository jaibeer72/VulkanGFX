{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "TestCmake",
            "displayName": "Configure preset using toolchain file",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja",
                "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
                    "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "VulkanGFX",
            "description": "",
            "displayName": "",
            "inherits": [
                "TestCmake"
            ]
        },
        {
            "name": "VisualStudio",
            "displayName": "Visual Studio 2022",
            "description": "Uses Visual Studio 2022 generator",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            }
        },
        {
            "name": "MinGW",
            "displayName": "MinGW Makefiles",
            "description": "Uses MinGW Makefiles generator",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            }
        },
        {
            "name": "osx-xcode",
            "displayName": "Mac (Xcode)",
            "description": "Native Xcode project generation",
            "generator": "Xcode",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "VCPKG_TARGET_TRIPLET": "arm64-osx"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "VulkanGFX:Debug",
            "configurePreset": "VulkanGFX",
            "configuration": "Debug"
        },
        {
            "name": "osx-xcode:Debug",
            "configurePreset": "osx-xcode",
            "configuration": "Debug"
        },
        {
            "name": "VisualStudio:Debug",
            "configurePreset": "VisualStudio",
            "configuration": "Debug"
        },
        {
            "name": "MinGW:Debug",
            "configurePreset": "MinGW",
            "configuration": "Debug"
        }
    ]
}